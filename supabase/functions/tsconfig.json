{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./_shared/*"]
    },
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": false,
    "allowJs": true,
    "outDir": "./dist",
    "emitDeclarationOnly": true
  },
  "include": [
    "**/*.ts",
    "deno.d.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
